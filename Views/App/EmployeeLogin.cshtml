@{
}


<div class="row">

    <div class="card-body col-md-6">
        <div class="container jumbotron">
            <h3>Please Login</h3>

            <br />
            <br />

            <form method="post" asp-controller="Employee" asp-action="Login">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Username" name="username" value="@TempData["Username"]">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" name="password">
                </div>
                <button type="submit" class="btn btn-dark">Login</button>

                @{
                    if (TempData["Error"] != null)
                    {

                        <br />
                        <br />

                        <div class="alert alert-danger">
                            <strong>Warning!</strong> @TempData["Error"] <button type='button' class='close' data-dismiss='alert' aria-hidden='true' />&times;
                        </div>
                    }
                }
            </form>
        </div>
    </div>

    <div class="card-body col-md-6">
        <div class="container">
            Or SignUp Here!
        </div>
    </div>

</div>
